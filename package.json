    "@adonisjs/generic-exceptions": "^2.0.1",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/lucid": "^4.0.22",
    "@adonisjs/session": "^1.0.19",
    "@adonisjs/shield": "^1.0.4",
    "cross-env": "^3.1.4",
    "nuxt": "latest",
    "standard": "^8.6.0",
    "url-parse": "^1.4.4",
    "youch": "^2.0.4"
